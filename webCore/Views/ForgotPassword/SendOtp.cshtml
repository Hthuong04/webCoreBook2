@{
    ViewData["Title"] = "Quên mật khẩu - Gửi OTP";
}

<h2>Quên mật khẩu - Gửi OTP</h2>

@if (ViewBag.Error != null)
{
<p style="color:red;">@ViewBag.Error</p>
}

<form method="post" action="/api/forgotpassword/send-otp">
    <div>
        <label>Email:</label>
        <input type="email" name="email" required />
    </div>
    <button type="submit">Gửi OTP</button>
</form>
