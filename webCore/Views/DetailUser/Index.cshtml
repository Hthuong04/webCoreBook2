@model webCore.Models.User

@{
    Layout = "_Layout"; // Sử dụng layout để kế thừa header
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thông tin cá nhân</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/user.css" asp-append-version="true"/>
</head>
<body>
    <!-- Section One -->
    <div id="section-one" class="py-5">
        <div class="container">
            <div class="personal-info-section w-100">
                <div class="inner-info">
                    <h5 class="mb-3">Thông tin cá nhân</h5>
                </div>

                <!-- Hiển thị thông báo thành công nếu có -->
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Message"]
                    </div>
                }

                <div class="row">
                    <div class="inner-img text-center col-md-3">
                        <!-- Hiển thị ảnh đại diện người dùng, sử dụng ảnh mặc định nếu không có -->
                        <img src="@(Model?.ProfileImage ?? "https://via.placeholder.com/120")" alt="Profile" class="profile-img mb-2" />
                        <div>
                            <button class="btn btn-link">Chọn ảnh</button>
                        </div>
                    </div>

                    <div class="inner-input col-md-9">
                        <!-- Form cập nhật thông tin người dùng -->
                        <form method="post" action="@Url.Action("UpdateProfile", "DetailUser")">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="fullName">Họ và tên</label>
                                    <input type="text" class="form-control" id="fullName" name="Name" value="@(Model?.Name ?? "")" placeholder="Nhập họ và tên" />
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="password">Mật khẩu</label>
                                    <input type="password" class="form-control" id="password" name="Password" value="@(Model?.Password ?? "")" placeholder="Nhập mật khẩu" />
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" id="email" name="Email" value="@(Model?.Email ?? "")" disabled />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="birthday">Ngày sinh</label>
                                    <input type="date" class="form-control" id="birthday" name="Birthday" value="@(Model?.Birthday != null ? Model.Birthday.ToString("yyyy-MM-dd") : "")" />
                                    @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="phone">Số điện thoại</label>
                                    <input type="tel" class="form-control" id="phone" name="Phone" value="@(Model?.Phone ?? "")" placeholder="Nhập số điện thoại" />
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="gender">Giới tính</label>
                                    <div>
                                        <input type="radio" id="male" name="Gender" value="male" @(Model?.Gender == "male" ? "checked" : "") />
                                        <label for="male">Nam</label>
                                        <input type="radio" id="female" name="Gender" value="female" class="ml-3" @(Model?.Gender == "female" ? "checked" : "") />
                                        <label for="female">Nữ</label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="address">Địa chỉ</label>
                                <textarea class="form-control" id="address" name="Address" placeholder="Nhập địa chỉ" rows="3">@Model?.Address</textarea>
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>

                            <button class="btn btn-primary btn-lg" type="submit">Cập nhật</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
