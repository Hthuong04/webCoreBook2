@model List<webCore.Models.Product_admin> // Specify the model type

@{
    ViewData["Title"] = "Index";
    Layout = "Admin";
}
<link rel="stylesheet" href="/css/Account_admin.css" />

<div class="container">
    <h1>Danh sách sản phẩm</h1>
    <div class="button-container">
        <a href="@Url.Action("Create", "Admin_product")" class="add-btn">
            <i class="fas fa-user-plus icon"></i> Thêm
        </a>
    </div>

    <table class="account-table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Trạng thái</th>
                <th>Vị trí</th>
                <th class="actions-header">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(product.Image))
                        {
                            <img src="@product.Image" alt="Image" style="width: 50px; height: 50px" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@product.CategoryTitle</td>
                    <td>@product.Price</td>
                    <td>@product.Stock</td>
                   
                    <td class="status-@product.Status.ToLower()">
                        @if (product.Status.Equals("Hoạt động", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="status-active">Hoạt động</span>
                        }
                        else
                        {
                            <span class="status-inactive">Dừng hoạt động</span>
                        }
                    </td>
                    <td>@product.Position</td>
                    <td class="actions-cell">
                        <button class="icon-btn edit-btn" title="Edit" onclick="window.location.href='@Url.Action("Update", "Admin_product", new { id = product.Id })'">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="icon-btn delete-btn" title="Delete" onclick="showDeleteModal('@product.Id', '@product.Title')">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal Xác Nhận Xóa -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa sản phẩm <strong id="productTitle"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index", "Admin_product")'">Hủy</button>
                    <form id="confirmDeleteForm" method="post" style="display:inline;">
                        <input type="hidden" id="productId" name="id" />
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script>
                 function showDeleteModal(id, title) {
                document.getElementById('productTitle').textContent = title;
                document.getElementById('productId').value = id;

                var formAction = '/Admin_product/DeleteConfirmed/' + id;
                document.getElementById('confirmDeleteForm').action = formAction;

                var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
                deleteModal.show();
            }
                //đóng modal
            function closeModal() {
                var modalElement = document.getElementById('deleteModal');
                var modal = bootstrap.Modal.getInstance(modalElement);
                if (modal) {
                    modal.hide();
                } else {
                    // Nếu không tìm thấy instance, có thể khởi tạo lại modal
                    var newModal = new bootstrap.Modal(modalElement);
                    newModal.hide();
                }
        }

    </script>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Trước</a>
            </li>
            <li class="page-item active" aria-current="page">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">Tiếp theo</a>
            </li>
        </ul>
    </nav>
</div>
