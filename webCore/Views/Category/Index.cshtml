@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>user</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
          integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/user.css" />
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-3">
                    <div class="inner-logo">
                        <a href="#">
                            <div class="inner-img">
                                <img src="/image/logo2.png" alt="" />
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-6">
                    <div class="inner-search">
                        <form class="d-flex" role="search">
                            <input class="form-control me-2"
                                   type="search"
                                   placeholder="Search"
                                   aria-label="Search" />
                            <button class="btn btn-outline-success" type="submit">
                                Search
                            </button>
                        </form>
                    </div>
                </div>
                <div class="col-3">
                    <div class="items-icon d-flex">
                        <div class="inner-cart">
                            <a href="#">
                                <i class="fa-solid fa-cart-shopping"></i>
                            </a>
                        </div>
                        <div class="inner-user">
                            <a href="#">
                                <i class="fa-regular fa-user"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- end header -->
    @model webCore.Models.User

    <div class="section-one">
        <div class="container">
            <div class="personal-info-section w-100">
                <div class="inner-info">
                    <h5 class="mb-3">Thông tin cá nhân</h5>
                </div>
                <div class="row">
                    <div class="inner-img text-center col-md-3">
                        <img src="@Model.ProfileImage ?? " https: //via.placeholder.com/120""
                             alt="Profile"
                             class="profile-img mb-2" />
                        <div>
                            <button class="btn btn-link">Chọn ảnh</button>
                        </div>
                    </div>

                    <div class="inner-input col-md-9">
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="lb" for="fullName">Họ và tên</label>
                                    <input type="text"
                                           class="form-control"
                                           id="fullName"
                                           value="@Model.Name"
                                           readonly />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="lb" for="password">Mật khẩu</label>
                                    <input type="password"
                                           class="form-control"
                                           id="password"
                                           value="@Model.Password"
                                           readonly />
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="lb" for="email">Email</label>
                                    <input type="email"
                                           class="form-control"
                                           id="email"
                                           value="@Model.Email"
                                           readonly />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="lb" for="birthday">Ngày sinh</label>
                                    <input type="text" class="form-control" id="birthday" value="@Model.Birthday.ToString("dd/MM/yyyy") ?? " N /A"" readonly />
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="lb" for="phone">Số điện thoại</label>
                                    <input type="text"
                                           class="form-control"
                                           id="phone"
                                           value="@Model.Phone ?? " N /A""
                                           readonly />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="lb" for="gender">Giới tính</label>
                                    <input type="text" class="form-control" id="gender" value="@Model.Gender ?? " N /A"" readonly />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="lb" for="address">Địa chỉ</label>
                                <textarea class="form-control"
                                          id="address"
                                          rows="3"
                                          readonly>@Model.Address ?? "N/A"</textarea>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-white py-4">
        <div class="container">
            <div class="row">
                <!-- Logo -->
                <div class="col-md-3 mb-3">
                    <div class="footer-logo">
                        <a href="#" class="text-white text-decoration-none">TYB</a>
                        <span class="title-second"> BOOK</span>
                    </div>
                </div>
                <!-- Contact Information -->
                <div class="col-md-2 mb-3 text-md-end text-center">
                    <div class="contact-info">
                        <p class="mb-0">Dịch vụ</p>
                        <p class="mb-0">Điều khoản sử dụng</p>
                        <p class="mb-0">Chính sách bảo mật</p>
                    </div>
                </div>
                <div class="col-md-2 mb-3 text-md-end text-center">
                    <div class="contact-info">
                        <p class="mb-0">Hỗ trợ</p>
                        <p class="mb-0">Chính sách hoàn trả tiền</p>
                        <p class="mb-0">Chính sách vận chuyển</p>
                    </div>
                </div>
                <div class="col-md-3 mb-3 text-md-end text-center">
                    <div class="contact-info">
                        <p class="mb-0">Liên hệ</p>
                        <p class="mb-0">
                            <i class="fa-solid fa-phone"></i>
                            Hotline:0905-773-799
                        </p>
                        <p class="mb-0">
                            <i class="fa-solid fa-envelope"></i>
                            Email:tybbook@gmail.com
                        </p>
                    </div>
                </div>
                <div class="col-md-2 mb-3 text-center">
                    <div class="social-icons">
                        <a href="#" class="text-white me-3">
                            <i class="fa-brands fa-facebook-f"></i>
                        </a>
                        <a href="#" class="text-white me-3">
                            <i class="fa-brands fa-twitter"></i>
                        </a>
                        <a href="#" class="text-white me-3">
                            <i class="fa-brands fa-instagram"></i>
                        </a>
                        <a href="#" class="text-white">
                            <i class="fa-brands fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
