@model webCore.Models.Order

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chi Tiết Đơn Hàng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Chi Tiết Đơn Hàng</h2>
        <div class="row">
            <div class="col-md-12">
                <p><strong>Ngày Đặt:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Họ và Tên:</strong> @Model.FullName</p>
                <p><strong>Địa chỉ:</strong> @Model.Address</p>
                <p><strong>Trạng thái:</strong> @Model.Status</p>
                <p><strong>Tổng Tiền:</strong> @Model.FinalAmount.ToString("C")</p>
                <h4>Danh Sách Sản Phẩm</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Hình Ảnh</th>
                            <th>Tên Sản Phẩm</th>
                            <th>Giá</th>
                            <th>Số Lượng</th>
                            <th>Thành Tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <img src="@item.Image" alt="Hình sản phẩm" style="width: 50px; height: 50px;" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@item.Quantity</td>
                                <td>@((item.Price * item.Quantity).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
