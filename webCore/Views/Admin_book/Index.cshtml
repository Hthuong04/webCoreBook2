@model List<webCore.Models.Book_admin> // Specify the model type

@{
    ViewData["Title"] = "Index";
    Layout = "Admin";
}
<link rel="stylesheet" href="/css/Account_admin.css" />

<div class="container">
    <h1>Danh sách sản phẩm</h1>
    <div class="button-container">
        <a href="@Url.Action("Create", "Admin_book")" class="add-btn">
            <i class="fas fa-user-plus icon"></i> Thêm
        </a>
    </div>

    <table class="account-table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Giảm giá</th>
                <th>Số lượng</th>
                <th>Hình ảnh</th>
                <th>Trạng thái</th>
                <th>Vị trí</th>
                <th class="actions-header">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Description</td>
                    <td>@book.CategoryTitle</td>
                    <td>@book.Price</td>
                    <td>@book.DiscountPercentage</td>
                    <td>@book.Stock</td>
                    <td>@book.Image</td>
                    <td class="status-@book.Status.ToLower()">
                        @if (book.Status.Equals("Hoạt động", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="status-active">Hoạt động</span>
                        }
                        else
                        {
                            <span class="status-inactive">Dừng hoạt động</span>
                        }
                    </td>
                    <td>@book.Position</td>
                    <td class="actions-cell">
                        <button class="icon-btn edit-btn" title="Edit" onclick="window.location.href='@Url.Action("Update", "Admin_book", new { id = book.Id })'">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="icon-btn delete-btn" title="Delete" onclick="showDeleteModal('@book.Id', '@book.Title')">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal Xác Nhận Xóa -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa danh mục <strong id="categoryTitle"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <!-- Khi nhấn "Hủy", modal sẽ tự động đóng -->
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <form id="confirmDeleteForm" method="post" style="display:inline;">
                        <!-- Dynamic URL for Delete -->
                        <input type="hidden" id="bookId" name="id" />
                        <button type="submit" class="btn btn-danger">Xóa</button> <!-- Đóng thẻ button đúng -->
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script>
                    function showDeleteModal(id, title) {
                // Gán thông tin danh mục vào modal
                document.getElementById('categoryTitle').textContent = title;
                document.getElementById('categoryId').value = id;

                // Cập nhật action của form để gửi yêu cầu xóa đúng danh mục
                var formAction = '/Admin_category/DeleteConfirmed/' + id;
                document.getElementById('confirmDeleteForm').action = formAction;

                // Hiển thị modal
                var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
                deleteModal.show();

        }

    </script>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Trước</a>
            </li>
            <li class="page-item active" aria-current="page">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">Tiếp theo</a>
            </li>
        </ul>
    </nav>
</div>
