@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>user</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
          integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/home.css" asp-append-version="true" />
    <script src="/js/user_icon.js"></script>
</head>
<body>
    <!-- header -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-3">
                    <div class="inner-logo">
                        <a href="#">
                            <div class="inner-img">
                                <img src="/image/logo2.png" alt="Logo" />
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-6">
                    <div class="inner-search">
                        <!-- Form tìm kiếm -->
                        <form class="d-flex" role="search" action="/api/products/search" method="get">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="name" />
                            <button class="btn btn-outline-success" type="submit">
                                Search
                            </button>
                        </form>
                    </div>
                </div>
                <div class="col-3">
                    <div class="items-icon">
                        <!-- Icon Cart -->
                        <div class="inner-cart">
                            <a href="#">
                                <i class="fa-solid fa-cart-shopping"></i>
                            </a>
                        </div>
                        <!-- Icon User -->
                        <div class="inner-user" id="userIcon">
                            <a href="#" class="user-dropdown-toggle">
                                <i class="fa-regular fa-user"></i>
                            </a>
                        </div>
                        <!-- New Chat Icon -->
                        <div class="inner-chat">
                            <a href="#">
                                <i class="fa-solid fa-comment-dots"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Dropdown menu -->
                    <div id="userDropdownMenu" class="user-dropdown hidden">
                        <a href="@Url.Action("Index", "DetailUser")">Thông tin cá nhân</a>
                        <a href="@Url.Action("Sign_in", "User")">Đăng xuất</a>
                    </div>
                    <!-- Username -->
                    <div class="user-name">
                        @{
                            var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");
                            if (!string.IsNullOrEmpty(userName))
                            {
                                <span>@userName</span> <!-- Hiển thị tên người dùng -->
                            }
                            else
                            {
                                <p>Đăng nhập</p>
                            }
                        }
                    </div>
                    <!-- Thêm CSS -->
                    <style>
                        .user-name {
                            margin-top: 10px; /* Khoảng cách giữa icon và phần chữ "Đăng nhập" */
                            text-align: center;
                            margin-right:12px
                        }

                            .user-name p {
                                margin: 0;
                                font-size: 1rem;
                                color: #333;
                            }
                    </style>
                </div>
            </div>
        </div>
    </header>
    <!-- end header -->
    <!-- Section One -->
    <div id="section-one" class="py-5">
        @RenderBody()
    </div>
    <!-- end Section One -->
    <!-- Footer -->
    <footer class="text-white py-4">
        <div class="container">
            <div class="row">
                <!-- Logo -->
                <div class="col-md-3 mb-3">
                    <div class="footer-logo">
                        <a href="#" class="text-white text-decoration-none">TYB</a>
                        <span class="title-second"> BOOK</span>
                    </div>
                </div>
                <!-- Contact Information -->
                <div class="col-md-2 mb-3 text-md-end text-center">
                    <div class="contact-info">
                        <p class="mb-0">Dịch vụ</p>
                        <p class="mb-0">Điều khoản sử dụng</p>
                        <p class="mb-0">Chính sách bảo mật</p>
                    </div>
                </div>
                <div class="col-md-2 mb-3 text-md-end text-center">
                    <div class="contact-info">
                        <p class="mb-0">Hỗ trợ</p>
                        <p class="mb-0">Chính sách hoàn trả tiền</p>
                        <p class="mb-0">Chính sách vận chuyển</p>
                    </div>
                </div>
                <div class="col-md-3 mb-3 text-md-end text-center">
                    <div class="contact-info">
                        <p class="mb-0">Liên hệ</p>
                        <p class="mb-0">
                            <i class="fa-solid fa-phone"></i>
                            Hotline:0905-773-799
                        </p>
                        <p class="mb-0">
                            <i class="fa-solid fa-envelope"></i>
                            Email:tybbook@gmail.com
                        </p>
                    </div>
                </div>
                <div class="col-md-2 mb-3 text-center">
                    <div class="social-icons">
                        <a href="#" class="text-white me-3">
                            <i class="fa-brands fa-facebook-f"></i>
                        </a>
                        <a href="#" class="text-white me-3">
                            <i class="fa-brands fa-twitter"></i>
                        </a>
                        <a href="#" class="text-white me-3">
                            <i class="fa-brands fa-instagram"></i>
                        </a>
                        <a href="#" class="text-white">
                            <i class="fa-brands fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector('.user-dropdown-toggle').addEventListener('click', function(e) {
            e.preventDefault();
            const dropdownMenu = document.getElementById('userDropdownMenu');
            dropdownMenu.classList.toggle('hidden');
        });
    </script>
</body>
</html>
